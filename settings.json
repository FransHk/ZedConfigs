{
  "show_inline_completions": true,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frapp√© - No Italics"
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "quoteStyle": "double",
          "lineLength": 88,
          "indent-style": "space",
          "line-ending": "auto",
          "indent-width": 4,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard"
        }
      }
    }
  },

  "languages": {
    "Python": {
      "show_inline_completions": true,
      "language_servers": ["!pylsp", "pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true
            // "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },

  "autosave_on_focus_change": true,
  "autosave_on_window_change": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "show_line_numbers": true
}
